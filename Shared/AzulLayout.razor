@namespace MeuSite.Layout
@inherits LayoutComponentBase

<link rel="stylesheet" href="/css/azul-layout.css" />

<div class="azul-layout-root">
  <header class="azul-header">
    <nav class="azul-nav">
      <div class="azul-nav-inner">
        <div class="azul-left">
          <a href="/azul#home" class="azul-logo-link">
            <img src="/image/SistemaLegado.png" alt="logo" class="azul-logo" />
          </a>
        </div>

        <!-- mobile toggle button -->
        <button id="nav-toggle" class="nav-toggle" aria-label="Abrir menu" aria-expanded="false" aria-controls="nav-menu">
