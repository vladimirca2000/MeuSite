@page "/azul"
@layout AzulLayout

<PageTitle>Azul - Home</PageTitle>

<link rel="stylesheet" href="/css/azul-home.css" />

<section class="azul-root">
  <!-- full-width carousel (spans entire viewport) -->
  <div class="azul-carousel-full">
    <div id="azul-carousel" class="azul-carousel" aria-roledescription="carousel">
      <!-- Images from /image/carrossel will be loaded by script -->
    </div>
    <button class="carousel-prev" aria-label="Anterior">‹</button>
    <button class="carousel-next" aria-label="Próximo">›</button>
    <div class="carousel-dots" aria-hidden="false"></div>
  </div>

  
</section>

<script src="/js/azul-carousel.js"></script>

